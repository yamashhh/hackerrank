{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "files": {
    "ignoreUnknown": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "includes": ["**", "!**/pnpm-lock.yaml"],
    "indentStyle": "space"
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } }
}
