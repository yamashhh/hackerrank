{
  "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
  "files": {
    "ignoreUnknown": true
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": ["pnpm-lock.yaml"],
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  }
}
